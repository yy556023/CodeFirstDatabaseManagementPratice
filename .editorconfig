# editorconfig.org
root = true

# 設定預設行尾字符為 LF，適用於所有文件
[*]
end_of_line = crlf

# 設定字符編碼
charset = utf-8

# 移除文件末尾的多餘空行
trim_trailing_whitespace = true

# 確保文件末尾有一個空行
insert_final_newline = true

# 縮排使用空格
indent_style = space

# 縮排使用幾個空格
indent_size = 4

[*.json]
# 縮排使用 2 個空格
indent_size = 2

[*.props]
# 縮排使用 2 個空格
indent_size = 2
